{
  "name": "@smm-architect/database",
  "version": "1.0.0",
  "description": "Shared database layer for SMM Architect with Prisma ORM",
  "main": "dist/client.js",
  "types": "dist/client.d.ts",
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "clean": "rm -rf dist generated",
    "prisma:generate": "prisma generate --schema=schema.prisma",
    "prisma:migrate": "prisma migrate dev --schema=schema.prisma",
    "prisma:deploy": "prisma migrate deploy --schema=schema.prisma",
    "prisma:reset": "prisma migrate reset --force --schema=schema.prisma",
    "prisma:status": "prisma migrate status --schema=schema.prisma",
    "prisma:studio": "prisma studio --schema=schema.prisma",
    "db:init": "ts-node migrate.ts init",
    "db:migrate": "ts-node migrate.ts migrate",
    "db:seed": "ts-node seed.ts",
    "db:reset": "ts-node migrate.ts reset",
    "db:status": "ts-node migrate.ts status",
    "migrate:from-sql": "ts-node migrate.ts migrate-from-sql",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix"
  },
  "dependencies": {
    "@prisma/client": "^5.7.0",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "eslint": "^8.54.0",
    "jest": "^29.7.0",
    "prisma": "^5.7.0",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.0",
    "typescript": "^5.3.0"
  },
  "files": [
    "dist",
    "schema.prisma",
    "generated"
  ],
  "engines": {
    "node": ">=18.0.0"
  },
  "prisma": {
    "schema": "schema.prisma",
    "seed": "ts-node seed.ts"
  },
  "keywords": [
    "prisma",
    "database",
    "postgresql",
    "orm",
    "smm-architect"
  ],
  "author": "SMM Architect Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/smm-architect/smm-architect.git",
    "directory": "services/shared/database"
  }
}