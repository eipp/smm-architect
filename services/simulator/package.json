{
  "name": "simulator-service",
  "version": "1.0.0",
  "description": "Monte Carlo simulation service for SMM Architect campaign readiness assessment",
  "main": "src/server.ts",
  "scripts": {
    "dev": "nodemon src/server.ts",
    "build": "tsc",
    "start": "node dist/server.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:deterministic": "jest --testNamePattern='deterministic'",
    "test:regression": "jest --testNamePattern='simulator-regression'",
    "test:properties": "jest --testNamePattern='monte-carlo-properties'",
    "test:regression-report": "node scripts/generate-regression-report.js",
    "test:property-report": "node scripts/generate-property-report.js",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix"
  },
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "helmet": "^7.0.0",
    "winston": "^3.11.0",
    "uuid": "^9.0.0",
    "node-vault": "^0.10.0",
    "axios": "^1.5.0",
    "seedrandom": "^3.0.5",
    "mathjs": "^11.11.0",
    "lodash": "^4.17.21",
    "@sentry/node": "^7.99.0",
    "@sentry/profiling-node": "^7.99.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/express": "^4.17.17",
    "@types/cors": "^2.8.13",
    "@types/uuid": "^9.0.0",
    "@types/jest": "^29.5.0",
    "@types/seedrandom": "^3.0.5",
    "@types/lodash": "^4.14.195",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.50.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.0",
    "nodemon": "^3.0.0",
    "typescript": "^5.2.0",
    "supertest": "^6.3.0",
    "fast-check": "^3.13.0"
  },
  "keywords": [
    "monte-carlo",
    "simulation",
    "campaign-optimization",
    "readiness-assessment",
    "smm"
  ],
  "license": "UNLICENSED"
}