{
  "name": "@smm-architect/monitoring",
  "version": "1.0.0",
  "description": "Monitoring and observability service for SMM Architect with Prometheus integration",
  "main": "dist/server.js",
  "scripts": {
    "build": "tsc",
    "dev": "ts-node src/server.ts",
    "start": "node dist/server.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:e2e": "ts-node src/e2e-smoke-tests.ts",
    "test:e2e:html": "ts-node src/e2e-smoke-tests.ts --html",
    "smoke-test": "npm run test:e2e",
    "smoke-test:ci": "npm run test:e2e -- --timeout 60000",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "clean": "rm -rf dist",
    "docker:build": "docker build -t smm-monitoring .",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f"
  },
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "express-rate-limit": "^7.1.5",
    "prom-client": "^15.0.0",
    "winston": "^3.11.0",
    "axios": "^1.6.2",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/express": "^4.17.21",
    "@types/cors": "^2.8.17",
    "@types/jest": "^29.5.8",
    "@types/uuid": "^9.0.7",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "eslint": "^8.54.0",
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "@types/supertest": "^2.0.16",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.0",
    "typescript": "^5.3.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "keywords": [
    "monitoring",
    "prometheus",
    "grafana",
    "observability",
    "metrics",
    "alerting",
    "smm-architect",
    "e2e-testing",
    "smoke-tests"
  ],
  "author": "SMM Architect Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/smm-architect/smm-architect.git",
    "directory": "services/monitoring"
  }
}