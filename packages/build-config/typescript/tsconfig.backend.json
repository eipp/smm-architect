{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "SMM Architect Backend Services TypeScript Config",
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022"],
    "module": "commonjs",
    "moduleResolution": "node",
    "types": ["node", "jest"],
    "noEmit": false,
    "declaration": true,
    "declarationMap": true,
    "composite": true,
    "incremental": true
  },
  "include": [
    "src/**/*",
    "tests/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "coverage"
  ]
}