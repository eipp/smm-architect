{
  "name": "smm-architect-qa",
  "version": "1.0.0",
  "description": "QA & Validation framework for SMM Architect",
  "packageManager": "pnpm@8.15.0",
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "test": "turbo test",
    "test:watch": "turbo test:watch",
    "test:coverage": "turbo test:coverage",
    "lint": "turbo lint",
    "lint:fix": "turbo lint:fix",
    "type-check": "turbo type-check",
    "start": "node start-server.js",
    "clean": "turbo clean && rimraf node_modules/.cache",
    "test:alerting": "jest tests/monitoring/alerting-system.test.ts",
    "test:contracts": "jest tests/contract/",
    "test:security": "jest tests/security/",
    "test:simulation": "jest tests/simulation/",
    "test:agents": "jest tests/agents/",
    "test:policy": "jest tests/policy/",
    "test:performance": "jest tests/performance/ --runInBand --testTimeout=600000",
    "test:slo": "jest tests/performance/slo-compliance.test.ts --runInBand",
    "test:benchmark": "jest tests/performance/benchmark-framework.test.ts --runInBand",
    "test:load": "jest tests/performance/load-testing-framework.test.ts --runInBand --testTimeout=1200000",
    "test:slo-monitoring": "jest tests/performance/slo-monitoring-framework.test.ts --runInBand",
    "performance:ci": "./tools/scripts/run-performance-tests.sh ci",
    "performance:staging": "./tools/scripts/run-performance-tests.sh staging",
    "performance:production": "./tools/scripts/run-performance-tests.sh production",
    "sbom:generate": "./tools/scripts/generate-sbom.sh",
    "sbom:check": "./tools/scripts/generate-sbom.sh && echo 'SBOM generation completed. Check ./sbom/ directory for results.'",
    "security:sbom": "npm run sbom:generate",
    "security:signatures": "npm audit signatures --audit-level moderate",
    "security:supply-chain": "npm run security:signatures && npm run security:sbom",
    "supply-chain:scan": "./tools/scripts/generate-sbom.sh && echo 'Supply chain security scan completed.'",
    "api:validate": "./tools/scripts/validate-api-docs.sh validate",
    "api:docs": "./tools/scripts/validate-api-docs.sh docs-only",
    "api:lint": "./tools/scripts/validate-api-docs.sh lint-only",
    "security:run": "./tools/scripts/run-security-tests.sh",
    "security:dependencies": "npm audit && npm run security:signatures",
    "test:quick": "jest --testPathPattern='(security|contracts)' --testTimeout=30000",
    "test:production": "./tools/scripts/run-production-tests.sh",
    "test:critical": "jest tests/security/ tests/dsr/ --testTimeout=60000",
    "validate:all": "npm run lint && npm run test:critical"
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "@types/jest": "^29.5.0",
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "eslint": "^8.57.0",
    "jest": "^29.7.0",
    "rimraf": "^5.0.0",
    "ts-jest": "^29.1.1",
    "turbo": "^2.5.6",
    "typescript": "^5.3.0"
  },
  "dependencies": {
    "@genkit-ai/mcp": "^1.17.1",
    "@sentry/node": "^7.99.0",
    "@types/js-yaml": "^4.0.9",
    "artillery": "^2.0.4",
    "axios": "^1.6.2",
    "fast-check": "^3.15.0",
    "js-yaml": "^4.1.0",
    "prom-client": "^15.1.0"
  },
  "optionalDependencies": {
    "@sentry/profiling-node": "^7.99.0"
  },
  "pnpm": {
    "overrides": {
      "ws": ">=8.17.1",
      "tar-fs": ">=2.1.3",
      "tmp": ">=0.2.4"
    }
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/tests"
    ],
    "testMatch": [
      "**/*.test.ts",
      "**/*.spec.ts"
    ],
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "collectCoverageFrom": [
      "tests/**/*.{ts,js}",
      "!tests/**/*.d.ts",
      "!tests/utils/**/*.ts"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ],
    "testTimeout": 300000,
    "setupFilesAfterEnv": [
      "<rootDir>/tests/setup.ts"
    ]
  },
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint"
    ],
    "extends": [
      "eslint:recommended",
      "@typescript-eslint/recommended"
    ],
    "parserOptions": {
      "ecmaVersion": 2020,
      "sourceType": "module",
      "project": "./tsconfig.json"
    },
    "rules": {
      "@typescript-eslint/no-unused-vars": "error",
      "@typescript-eslint/explicit-function-return-type": "off",
      "@typescript-eslint/no-explicit-any": "warn"
    }
  },
  "keywords": [
    "smm-architect",
    "qa",
    "testing",
    "monitoring",
    "alerts",
    "validation"
  ],
  "author": "SMM Architect Team",
  "license": "MIT"
}
